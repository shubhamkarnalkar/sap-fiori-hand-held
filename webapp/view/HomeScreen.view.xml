<mvc:View controllerName="handheldd.controller.HomeScreen"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        <content>
        <Button id="home-button" press="goToTransactions" text="{i18n>transactions}" ></Button>
        
    <Input
      value="{/recipient/name}"
      description="Hello {/recipient/name}"
      valueLiveUpdate="true"
      width="60%"/>
    
        </content>
    </Page>
</mvc:View>
